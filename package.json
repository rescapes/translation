{
  "name": "@rescapes/translation",
  "version": "0.0.26",
  "license": "MIT",
  "description": "Translation helpers",
  "main": "src/index.mjs",
  "module": "src/index.mjs",
  "type": "module",
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:rescapes/translation.git"
  },
  "author": "Andy Likuski andy@likuski.org",
  "bugs": {
    "url": "https://github.com/rescapes/translation"
  },
  "browser": {
    "child_process": false,
    "fs": false
  },
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "lint": "eslint src",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "rollup -c",
    "prepare": "cross-env ENABLE_INTEGRATION_TESTS=false yarn run clean && yarn run build",
    "build-publish-patch": "yarn run build && yarn run publish-patch",
    "build-publish-minor": "yarn run build && yarn run publish-minor",
    "publish-patch": "yarn version --patch && yarn publish --non-interactive",
    "publish-minor": "yarn version --minor && yarn publish --non-interactive"
  },
  "dependencies": {
    "folktale": "^2.3.2",
    "i18next": "^20.1.0",
    "i18next-browser-languagedetector": "^6.1.0",
    "i18next-http-backend": "^1.2.1",
    "ramda": "^0.27.1",
    "react": "^17.0.2",
    "react-i18next": "^11.8.12"
  },
  "devDependencies": {
    "@rescapes/log": ">=0.1.30",
    "@rescapes/ramda": ">=1.6.172",
    "@rescapes/validate": ">=1.3.25",
    "babelrc-rollup": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "7.23.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.22.1",
    "jest": "26.6.3",
    "jest-cli": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jsdom-global": "^3.0.2",
    "rollup": "^2.44.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-uglify": "^6.0.3",
    "rollup-watch": "^4.3.1"
  },
  "peerDependencies": {
    "@rescapes/log": ">=0.1.13",
    "@rescapes/ramda": ">=1.6.151",
    "@rescapes/validate": ">=1.3.17"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jestsetup.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "jest-environment-node",
    "testURL": "http://localhost",
    "transform": {},
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {},
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  }
}
